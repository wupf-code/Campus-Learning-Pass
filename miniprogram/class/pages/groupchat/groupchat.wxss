 }
 .media{
	height: 150rpx;
	width: 100rpx;
	margin: 0rpx;
 }
 .divLinebottom{
	bottom: 40rpx;
	position: fixed;
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }
.scroll-view{
	height: 1200rpx;
	padding: 30rpx;
}

.mymessage{
	display:flex;
	flex-direction: row-reverse;
}
.myprofile{
	margin-right: 50rpx;
	height: 70rpx;
	width: 70rpx;
	border-radius: 30rpx;
}
.myname{
	margin-right: 10rpx;
	margin-top: 20rpx;
}
.reverse{
	display: flex;
	flex-direction: row-reverse;
}
.mytext{
	border: 3rpx solid lightgreen;
	border-radius: 10rpx;
	background-color: lightgreen;
  padding: 10rpx;
	margin-top: 30rpx;
	margin-right: 150rpx;
	max-width: 70%;
}
.myimage_view{
	border: 3rpx solid lightgreen;
	background-color: lightgreen;
	border-radius: 10rpx;
	padding: 10rpx;
	margin-top: 30rpx;
	margin-left: 50rpx;
	max-width: 70%;
	display: flex;
  flex-direction: row;
  justify-content: center;
}
.space{
	margin-top: 100rpx;
}
.othersmessage{
	display:flex;
	flex-direction: row;
}
.othersprofile{
	height: 70rpx;
	width: 70rpx;
	border-radius: 30rpx;
}
.othersname{
	margin-left: 10rpx;
	margin-top: 20rpx;
}
.otherstext{
	border: 3rpx solid;
	border-radius: 10rpx;
  padding: 10rpx;
	margin-top: 30rpx;
