	max-width: 70%;
	display: flex;
  flex-direction: row;
  justify-content: center;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 250px;
  height: 120px;
  background-color: #fff;
}
.orderbutton{
	border: solid 3rpx;
	width: 100%;
	height: 50%;
}