  width: 100%;
  height: 5rpx;
 }
 .divLinedown{
	bottom: 38rpx;
	position: fixed;
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }
 .openmedia{
	display: inline-block;
	height: 75rpx;
	width: 75rpx;
	margin-left: 20rpx;
	padding: 5rpx;
 }
 .openmediaimage{
	height: 70rpx;
	width: 70rpx;
 }
 .showmedia{
	display: flex;
	position: fixed;
	bottom: 40rpx;
	width: 100%;
	height: 200rpx;
 }
 .hidemedia{
	bottom: 220rpx;
	position: fixed;
	width: 100%;
	height: 40rpx;
 }
 .btnmedia1{
	margin-top: 20rpx;
